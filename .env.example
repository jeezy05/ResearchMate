# ========================================
# ResearchMate RAG - Environment Variables
# ========================================

# Application Settings
DEBUG=false
HOST=0.0.0.0
PORT=8000

# CORS Settings - Frontend Connection
CORS_ORIGINS=["http://localhost:8501", "http://localhost:3000"]

# Ollama Configuration
# Note: For Docker, use http://host.docker.internal:11434
# For local development, use http://localhost:11434
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2

# Embedding Configuration
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Vector Store Configuration - ChromaDB
CHROMA_PERSIST_DIRECTORY=./chroma_db
COLLECTION_NAME=researchmate_docs

# Document Processing
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
TOP_K_RETRIEVAL=5

# File Upload Settings
UPLOAD_DIR=./data/raw
MAX_UPLOAD_SIZE_MB=10
ALLOWED_EXTENSIONS=[".pdf", ".txt", ".md", ".docx"]

# LLM Parameters
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2000
LLM_CONTEXT_WINDOW=4096

# Frontend Configuration (for Docker)
API_BASE_URL=http://localhost:8000
